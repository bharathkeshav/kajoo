$("#flash_notice").html("<%= escape_javascript(flash[:notice])%>").show();
$("#flash_alert").html("<%= escape_javascript(flash[:alert])%>").show();

$('#flash_notice').delay(2000).slideUp(1000);
$('#flash_alert').delay(2000).slideUp(1000);

$('#issue-vote-link-<%= @issue.id %>')
  .html('Supported!')
  .parent().addClass('supported');
  
$('#votes-remaining').html('<%= current_user.votes_remaining %>');
$('#reputation-points').html('<%= current_user.points %>');