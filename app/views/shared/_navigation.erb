<!--<h1><%= link_to "Kajoo #{city_name} : #{site_name}", root_path %></h1>-->


<div class="grid_10">
<a  href="/" id="logo"><img src="/images/kajoo-logo-lockup.png" height="100" width=""></a>
</div>

<div id="navigation" class="grid_14 omega">
	<ul>
	   <% if is_mobile_device? 
	     home_label = 'Home'
	     votes_label = 'Votes'
	     rep_label = 'Reputation'
	   else
  	   home_label = 'Home' 
	     votes_label = 'Votes Remaining'
	     rep_label = 'Reputation Points'
	   end %>
	
	   <% if(current_user) %>
		  <li><%= link_to home_label, root_path %></li>
      <li><%= link_to raw("<span id=\"votes-remaining\">#{current_user.votes_remaining}</span> #{votes_label}"), users_dashboard_path %></li>
      <li><%= link_to raw("<span id=\"reputation-points\">#{current_user.points}</span> #{rep_label}"), users_dashboard_path %></li>
  	  <li><img id="twitter_avatar" src="<%= current_user.avatar_url %>" alt="<%= current_user.name %>">
    	  <% if !is_mobile_device? %><%= link_to current_user.name, user_path(current_user), :id => 'account_link' %> | <% end %>
    	  <%= link_to 'Logout', destroy_user_session_path, :id => 'logout_link' %></li>
		<% else %>
  		<li><%= link_to "View Issues", issues_path %></li>
		  <li><%= link_to "Login", user_omniauth_authorize_path(:twitter), :id => 'login' %></li>
		<% end %>
	</ul>
</div>



